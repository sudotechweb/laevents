<section class="row">
    <div class="col-12">
        <p class="h1 display-4 text-info">{{pagetitle is defined ? pagetitle : 'Page Title'}}</p>
    </div>
    {% if actions is defined %}
        <div class="col-12 d-md-flex justify-content-start">
            {% for action in actions %}
                <span class="badge badge-{{action.class|default('danger')}} p-2">
                    {% if action.id is defined %}
                        <a class="text-dark" href="{{path(action.name, {id: action.id})}}">{{action.label}}</a>
                    {% else %}
                        <a class="text-dark" href="{{path(action.name)}}">{{action.label}}</a>
                    {% endif %}
                </span>
            {% endfor %}
        </div>
    {% endif %}
    {% if subtitle is defined %}
        <div class="col-12">
            <p class="text-secondary small">{{ subtitle }}</p>
        </div>
    {% endif %}
</section>