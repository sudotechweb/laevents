<div class="card-columns no-gutters">
    {% for event in events %}
    {# <div class="col-sm-6"> #}
        <div class="card">
            {% if (event.imageFilename) %}
                {# <img class="img-fluid" src="{{asset('uploads/images/' ~ event.imageFilename) }}" class="img-fluid" alt=""> #}
                {# <img class="img-fluid" src="{{vich_uploader_asset(event) }}" class="img-fluid" alt=""> #}
                <img class="img-fluid" src="{{cloudinary_url(event.imageFilename,{'width': 550}) }}" alt="{{event.title ~ ' ' ~ event.imageFilename}}">
            {% endif %}
            <div class="card-body p-2">
                <h4 class="small">
                    <a class="lead text-justify" href="{{ path('event_show', {'id': event.id}) }}">
                    {{ event.title }}
                    </a>
                </h4>
                {% set desc = '' %}
                {# {% if event.description|length > 200 %}
                    {% set desc = event.description|slice(0,200) %}
                {% else %}
                    {% set desc = event.description %}
                {% endif %} #}
                {# <p class="d-none d-md-block card-text">{{ desc|raw }}</p> #}
                {# <div class="list-group list-group-flush card-text">
                    <p class="list-group-item mb-0">{{ event.venue }}</p>
                    <p class="list-group-item mb-0">{{ startDate ? startDate|date('F j Y') : '' }}</p>
                    <p class="list-group-item mb-0">{{ endDate ? endDate|date('F j Y') : '' }}</p>
                </div> #}
                {# <h4 class="card-title small"><a href="{{path('event_show',{id: event.id})}}">{{ event.title }}</a></h4> #}
                {% set startDate = date() %}
                {% set endDate = date() %}
                {% set allDayEvent = false %}
                {% for date in event.eventDates %}
                    {% set startDate = date.startDate %}
                    {% set endDate = date.endDate %}
                    {% set allDayEvent = date.allday %}
                {% endfor %}
                {% set dateDiff = startDate.diff(endDate)|date %}
                <p class="card-text text-muted small">A {{ dateDiff > 0 ? 'full day' : ''}} event starting on {{ startDate|date('F j Y') }}. {{event.venue}} is the venue for this event.</p>
                <span class="badge badge-pill badge-warning">{{startDate < date() ? 'Expired' : null}}</span>
                {% if event.category %}
                    {# <a href="{{path('category_show',{id:event.category.id})}}"> #}
                        <p class='badge badge-pill p-2 text-light text-sm float-right' style="background: {{event.category ? event.category.color }};">{{ event.category }}</p>
                    {# </a> #}
                {% endif %}
            </div>
            <a class="card-footer bg-primary btn btn-block btn-info btn-sm" href="{{ path('event_show', {'id': event.id}) }}">view details</a>
        </div>
    {# </div> #}
    {% else %}
        <div class="col">
            <p>no records found</p>
        </div>
    {% endfor %}
</div>
