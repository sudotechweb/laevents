{% extends 'base.html.twig' %}

{% block title %}{{category.name}} Category{% endblock %}

{% block body %}
    {% include "generic/page-header.html.twig" with {
        pagetitle: category.name~' Category',
        actions: [{
            name: 'category_edit',
            id: category.id,
            label: 'update category details',
            class: 'warning',
        },{
            name: 'category_index',
            label: 'back to list of categories',
            class: 'success',
        },{
            name: 'event_index',
            label: 'jump to list of events',
            class: 'primary',
        }]
    } %}
    <div class="row">
        <div class="col-12">
            <table class="table table-sm table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ category.description }}</td>
                    </tr>
                    <tr>
                        <th>Events</th>
                        <td>{{ category.events.count }}</td>
                    </tr>
                </tbody>
            </table>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
