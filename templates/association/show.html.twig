{% extends 'base.html.twig' %}

{% block title %}Association - {{ association.name }}{% endblock %}

{% block body %}
    {% include "generic/page-header.html.twig" with { pagetitle: association.name ~ ' Association', subtitle: 'All events organized by the association <em>'~association.name~'</em>' } %}
    <div class="row mb-3">
        <div class="col"><img src="{{ asset('uploads/images/' ~ association.logoFileName) }}" class="img-fluid"></div>
        <div class="col-sm-12 col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ association.name}}</h4>
                    <p class="card-text">{{ association.email }}</p>
                    <p class="card-text">{{ association.phone }}</p>
                    <p class="card-text">{{ association.description }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        {% include "event/snippets/cards.html.twig" %}
    </div>
{% endblock %}
